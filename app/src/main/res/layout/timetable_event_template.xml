<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/content_padding"
        android:layout_marginBottom="@dimen/elements_margin_small"
        android:background="@drawable/daily_event_style">

        <TextView
            android:id="@+id/textview_timetable_event_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextPrimary"
            android:text="x"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/textview_timetable_event_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/textview_timetable_event_delete"
            android:layout_alignParentLeft="true"
            android:textColor="@color/colorTextPrimary"
            android:textStyle="bold"
            style="@style/Base.TextAppearance.AppCompat.Title"/>

        <TextView
            android:id="@+id/textview_timetable_event_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextPrimary"
            android:layout_below="@id/textview_timetable_event_title"
            style="@style/TextAppearance.AppCompat.Body2"/>

        <TextView
            android:id="@+id/textview_timetable_event_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextPrimary"
            android:layout_below="@id/textview_timetable_event_time"
            style="@style/Base.TextAppearance.AppCompat.Body1"/>


    </RelativeLayout>
</LinearLayout>