<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearlayout_contact_list_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/content_padding"
    android:paddingTop="@dimen/content_padding">

    <TextView
        android:id="@+id/textview_contact_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorTextSecondary"
        style="@style/TextAppearance.AppCompat.Widget.DropDownItem"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/button_contact_group_delete"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/ic_decline_dark"/>


</RelativeLayout>