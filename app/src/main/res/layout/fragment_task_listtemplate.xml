<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearlayout_task_listtemplate"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent">

        <Button
            android:id="@+id/button_listtemplate_more"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_more"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true" />

        <TextView
            android:id="@+id/textview_listtemplate_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/button_listtemplate_more"
            android:layout_toLeftOf="@+id/button_listtemplate_done"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:textColor="@color/colorTextLight"
            android:textStyle="bold"
            android:textSize="22sp"
            android:text="Header"/>

        <Button
            android:id="@+id/button_listtemplate_done"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_done"
            />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearlayout_listtemplate_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    </LinearLayout>



</LinearLayout>
